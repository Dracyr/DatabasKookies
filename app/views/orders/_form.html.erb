<%= javascript_include_tag "nested_form" %>

<%= bootstrap_nested_form_for(@order) do |f| %>
  <%= f.form_group do %>
    <%= f.collection_select :customer_id, Customer.all, :id, :name, {}, class: 'select2' %>
    <%= f.datetime_select :delivered_at %>
  <% end %>


  <%= f.form_group do %>
    <%= f.label :pallets %> <br/>
    <%= f.fields_for :order_products %>

    <%= f.link_to_add "Add product", :order_products, class: "btn btn-primary" %>
  <% end %>


  <%= f.form_group do %>
    <%= f.submit %>
  <% end %>
<% end %>
