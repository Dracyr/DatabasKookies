<%= javascript_include_tag :defaults, "nested_form" %>
<%= bootstrap_nested_form_for(@product, layout: :inline) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.form_group do %>
    <%= f.text_field :name %>
  <% end %>

  <h4>Ingredients:</h4>
    <%= f.fields_for :product_ingredients do |product_ingredients_form| %>
      <%= f.form_group do %>
        <%= product_ingredients_form.collection_select :ingredient_id, Ingredient.all.order(:name), :id, :name, hide_label: true %>
        <%= product_ingredients_form.text_field :quantity, hide_label: true %>
        <%= product_ingredients_form.hidden_field :id %>
        <%= product_ingredients_form.link_to_remove "X", class: "btn btn-danger" %>
      <% end %>
    <% end %>

  <%= f.form_group  do %>
    <%= f.link_to_add "Add an ingredient", :product_ingredients,
    class: "btn btn-success", layout: :default %>
  <% end %>

  <%= f.form_group do %>
    <%= f.primary %>
  <% end %>
<% end %>
