<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Ingredients:</strong>
  <ul>
    <% @product.product_ingredients.each do |pi| %>
      <li>
        <%= pi.ingredient.name %>  <%= pi.quantity %>
      </li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
