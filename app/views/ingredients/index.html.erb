<h1>Listing Ingredients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Last delivered</th>
      <th>Last delivered quantity</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.quantity / 1000.0 %>kg</td>
        <td><%= ingredient.last_delivered %></td>
        <td><%= ingredient.last_delivered_quantity.to_i / 1000.0 %>kg</td>
        <td>
          <%= bootstrap_form_for(ingredient, layout: :inline) do |f| %>
            <%= f.text_field :last_delivered_quantity, hide_label: true, placeholder: 'Quantity (kg)', value: nil %>
            <%= f.submit "Leverera" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
